<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/color_tab_background"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/bottombar_homepage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/icon_size_bottom_bar"
            android:layout_height="@dimen/icon_size_bottom_bar"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_locate"
            android:layout_marginBottom="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="hehe"
            android:layout_marginBottom="7dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottombar_car"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/icon_size_bottom_bar"
            android:layout_height="@dimen/icon_size_bottom_bar"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_locate"
            android:layout_marginBottom="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="hehe"
            android:layout_marginBottom="7dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottombar_me"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/icon_size_bottom_bar"
            android:layout_height="@dimen/icon_size_bottom_bar"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_locate"
            android:layout_marginBottom="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="hehe"
            android:layout_marginBottom="7dp"/>
    </LinearLayout>

</LinearLayout>